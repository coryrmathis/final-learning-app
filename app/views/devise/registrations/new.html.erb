<div id='register-pad'>
  <div id='register-form'>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <h2 class="form-signin-heading">Create your account</h2>
        <%= f.text_field :first_name, autofocus: true %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.date_field :dob, autofocus: true, label: "Birthday" %>
        <%= f.text_field :location, autofocus: true %>
        <%= f.email_field :email, autofocus: true %>
        <%= f.password_field :password, autocomplete: "off", help: "Use at least 6 characters" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>

        <div id='register-error' class="alert alert-danger hide" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          <span class="register-error-msg"></span>
        </div>

        <%= f.submit "Sign up", id: "register-button" %>
        <p>Already have an account? <%= render "devise/shared/links" %></p>
    <% end %>
  </div>
</div>
